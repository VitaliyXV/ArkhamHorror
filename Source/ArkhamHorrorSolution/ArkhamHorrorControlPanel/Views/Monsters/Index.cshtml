@model IEnumerable<ArkhamHorrorLibrary.Model.Monster>

@{
    ViewBag.Title = "Монстры";
}

<h2>Монстры</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="text-align:center">
    <tr>        
        <th>Image</th>      
        <th>
            @Html.DisplayNameFor(model => model.OriginalName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocalName)
        </th>
        <!--th>
            @Html.DisplayNameFor(model => model.Description)
        </th-->
        <th>
            Тип движения
        </th>
        <th>
            Тип Монстра
        </th>
        <th>
            Стойкость
        </th>
        <th>
            Бдительность
        </th>
        <th>
            Рейтинг ужаса
        </th>
        <th>
            Урон ужаса
        </th>
        <th>
            Боевой рейтинг
        </th>
        <th>
            Боевой урон
        </th>
        <th>
            Особые свойства
        </th>
        <th>
            Родное измерение
        </th>
        <th>
            Дополнение
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>         
        <td>
            <img src="~/Content/Images/Premium Figures/Monsters/@(item.OriginalName).png" width="80" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OriginalName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocalName)
        </td>
        <!--td>
            @Html.DisplayFor(modelItem => item.Description)
        </td-->
        <td>
            @Html.DisplayFor(modelItem => item.MonsterMoveType1.LocalName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MonsterType1.LocalName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Toughness)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Awareness)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HorrorRating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HorrorDamage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CombatRating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CombatDamage)
        </td>
        <td>
            @foreach (var ability in item.MonstersAbilities)
            {
                @ability.Ability1.LocalName;
                
                if (ability.Value > 0)
                {
                    <span>&nbsp;</span>
                    @ability.Value
                }
                <br />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dimension1.LocalName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GameExtention1.LocalName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

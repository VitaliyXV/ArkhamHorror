@model IEnumerable<ArkhamHorrorLibrary.Model.GameExtention>

@{
    ViewBag.Title = "Список дополнений";
    var imageExt = ".png";
}

<h2>Дополнения</h2>

<p>
    @Html.ActionLink("Создать новое", "Create")
</p>
<table class="table">
    <tr>
        <th>Символ</th>
        <th>
            @Html.DisplayNameFor(model => model.LocalName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocalName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseYear)
        </th>       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Content/Images/ExpansionIcons/@item.Id@imageExt" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OriginalName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocalName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseYear)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Обзор", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
